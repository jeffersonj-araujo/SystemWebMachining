@model FSUsinagem.Models.LocalPasswordModel
@{
    ViewBag.Title = "Gerenciar conta";
}

<header>
    <h1>@ViewBag.Title</h1>
</header>

<div id="main-content">
    <p class="message-success">@ViewBag.StatusMessage</p>

    <p>Você fez logon como <strong>@User.Identity.Name</strong>.</p>
    <p>@Html.ActionLink("Voltar para a Minha lista de tarefas pendentes", "Index", "Home")</p>

    <section class="todoList">
    @if (ViewBag.HasLocalPassword)
    {
        @Html.Partial("_ChangePasswordPartial")
    }
    else
    { 
        @Html.Partial("_SetPasswordPartial")
    }
    </section>

    <section class="todoList" id="externalLogins">
        @Html.Action("RemoveExternalLogins")

        <h3>Adicionar logon externo</h3>
        @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}